{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev-common",
      "hidden": true,
      "inherits": ["dev-mode"],
      "cacheVariables": {
        "BUILD_MCSS_DOCS": "ON",
        "CMAKE_PREFIX_PATH": "/home/a68ibrah/libtorch_workspace/versions/libtorch"
      }
    },
    {
      "name": "dev-linux",
      "binaryDir": "${sourceDir}/build/dev-linux",
      "inherits": ["dev-common", "ci-linux"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dev-darwin",
      "binaryDir": "${sourceDir}/build/dev-darwin",
      "inherits": ["dev-common", "ci-darwin"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dev-win64",
      "binaryDir": "${sourceDir}/build/dev-win64",
      "inherits": ["dev-common", "ci-win64"],
      "environment": {
        "UseMultiToolTask": "true",
        "EnforceProcessCountAcrossBuilds": "true"
      }
    },
    {
      "name": "dev",
      "binaryDir": "${sourceDir}/build/dev",
      "inherits": "dev-linux"
    },
    {
      "name": "devnotest",
      "binaryDir": "${sourceDir}/build/devnotest",
      "inherits": "dev-linux",
      "cacheVariables": {
        "pimc-sim_DEVELOPER_MODE": "OFF"
      }
    },
    {
      "name": "dev-coverage",
      "binaryDir": "${sourceDir}/build/coverage",
      "inherits": ["coverage-linux", "dev-mode" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Coverage",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dev-address",
      "inherits": "ci-sanitize",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dev-highperf",
      "binaryDir": "${sourceDir}/build/dev-highperf",
      "inherits": ["dev-mode", "ci-linux-highperf"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "HighPerf",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "configuration": "Debug",
      "jobs": 8
    },
    {
      "name": "devnotest",
      "configurePreset": "devnotest",
      "configuration": "Debug",
      "jobs": 8
    },
    {
      "name": "dev-coverage",
      "configurePreset": "dev-coverage",
      "jobs": 8
    },
    {
      "name": "dev-address",
      "configurePreset": "dev-address",
      "jobs": 8
    },
    {
      "name": "dev-highperf",
      "configurePreset": "dev-highperf",
      "jobs": 8
    }
  ],
  "testPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "jobs": 8
      }
    },
    {
      "name": "dev-coverage",
      "configurePreset": "dev-coverage",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "jobs": 8
      }
    },
    {
      "name": "dev-address",
      "configurePreset": "dev-address",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "jobs": 8
      }
    },
    {
      "name": "dev-highperf",
      "configurePreset": "dev-highperf",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "jobs": 8
      }
    }
  ]
}
